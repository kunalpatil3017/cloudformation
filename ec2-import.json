	"Resources" : {
			 "EC2Host" : {
				"Type" : "AWS::EC2::Instance",
				"Metadata" : {
						"Comment" : "Install a simple application",
						"AWS::CloudFormation::Init" : {
							"config" : {
						   "packages" : {
										"yum" : {
										"docker"             : []
											}
									},
							"files" :{
										"/etc/cfn/cfn-hup.conf" : {
											"content" : { "Fn::Join" : ["", [
															"[main]\n",
															"stack=", { "Ref" : "AWS::StackId" }, "\n",
															"region=", { "Ref" : "AWS::Region" }, "\n",
															"interval=1","\n"
											            ]
													]
												},
											"mode"    : "000400",
											"owner"   : "root",
											"group"   : "root"
										},

										"/etc/cfn/hooks.d/cfn-auto-reloader.conf" : {
												"content": { "Fn::Join" : ["", [
														"[cfn-auto-reloader-hook]\n",
														"triggers=post.update\n",
														"path=Resources.EC2Host.Metadata.AWS::CloudFormation::Init\n",
														"action=/opt/aws/bin/cfn-init -v ",
														"         --stack ", { "Ref" : "AWS::StackName" },
														"         --resource EC2Host ",
														"         --region ", { "Ref" : "AWS::Region" }, "\n",
														"runas=root\n"
														]]}
										
										},
										"/opt/docker.sh" :{
															"content" : { "Fn::Join" : ["\n", [
																		"#!/bin/bash",
																		"cd /opt/docker-lamp-master/",
																		"service docker restart",
																		"docker build -t kunal-test:latest .",
																		"docker run -d -p 80:80 kunal-test:latest"
																		]
																		]
															        },
															"mode"    : "000700",
															"owner"   : "root",
															"group"   : "root"
														
														}
									},	
							"sources" : {
										"/opt" :"https://s3.ap-south-1.amazonaws.com/cgcodebackup/docker-lamp-master.zip"
																			
									},
							"services" : {
								"sysvinit" : {
										"docker" : {
											"enabled" : "true",
											"ensureRunning" : "true"
										
										},
										"cfn-hup" : { "enabled" : "true", "ensureRunning" : "true", 
												"files" : ["/etc/cfn/cfn-hup.conf", "/etc/cfn/hooks.d/cfn-auto-reloader.conf"]}
												
									}
							    },
								"commands" : {
									"dockercommand" : {
										"command" : " sudo /bin/bash /opt/docker.sh",
										"cwd":"/opt",
										"ignoreErrors" : "true"
									}		
								}
							}
							
					    }
					},
				"Properties" : {
					"InstanceType" : { "Ref" : "EC2InstanceType" },
					"KeyName"  : { "Ref" : "KeyName" },
					"ImageId"  : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" }, 
								{ "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "EC2InstanceType" }, "Arch" ] } ] },
					"UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
							"#!/bin/bash -xe\n",
							"yum update -y aws-cfn-bootstrap\n",

							"/opt/aws/bin/cfn-init -v ",
							"         --stack ", { "Ref" : "AWS::StackName" },
							"         --resource EC2Host ",
							"         --region ", { "Ref" : "AWS::Region" }, "\n"
                        ]]}},
					"NetworkInterfaces" : [{
						"GroupSet"                 : [{"Fn::ImportValue" : {"Fn::Sub" : "${Referancestackname}-SG"}}],
						"AssociatePublicIpAddress" : "true",
						"DeviceIndex"              : "0",
						"DeleteOnTermination"      : "true",
						"SubnetId"                 : {"Fn::ImportValue" : {"Fn::Sub" :"${Referancestackname}-Public-subnet"}}
                    }]
                }	
    
			}
		},
	"Outputs": {
		"URL" : {
				"Value" : { "Fn::Join" : [ "", ["http://", { "Fn::GetAtt" : ["EC2Host", "PublicIp"] },"/phpmyadmin"]]},
				"Description" : "Newly created application URL"
			}
		}	
